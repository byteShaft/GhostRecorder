<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.byteshaft.ghostrecorder" >
    
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <receiver
            android:name=".BinarySmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="10">
                <action android:name="android.intent.action.DATA_SMS_RECEIVED"/>
                <data
                    android:scheme="sms"
                    android:host="*"
                    android:port="6742"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".ConnectionChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".AlarmReciever">
            <intent-filter>
                <action android:name="com.byteshaft.startAlarm"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".AlarmReciever">
            <intent-filter>
                <action android:name="com.byteshaft.startAlarm"/>
            </intent-filter>
        </receiver>
        <service
            android:name=".AudioRecorderService"
            android:enabled="true">
        </service>
        <receiver android:name=".PhoneBootStateReader"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED">

                </action>
            </intent-filter>
        </receiver>
        <receiver android:name=".DeleteDataReceiver">
            <intent-filter>
                <action android:name="com.byteshaft.deleteData"/>
            </intent-filter>
        </receiver>
        
    </application>
</manifest>
